#include <stdio.h>

int main()
{
    
    int a[100],i,n,c=0,d=0;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
       scanf("%d",&a[i]);
    }
    printf("Even numbers : ");
    for(i=0;i<n;i++)
    {
        if(a[i]%2==0)
        {
            printf("%d ",a[i]);
            c++;
        }
    }
    printf("\nOdd numbers :");
    for(i=0;i<n;i++)
    {
        if(a[i]%2!=0)
        {
        printf("%d ",a[i]);
        d++;
        }
    }
    printf("\n");
    printf("\neven count = %d ",c);
    printf("\nodd count = %d ",d);
}
